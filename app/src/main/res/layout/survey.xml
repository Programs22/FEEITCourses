<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="315dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondary_orange"
>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/survey_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/importance_rating"
        android:contentDescription="@string/survey_icon"
        android:src="@drawable/surveys"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginLeft="@dimen/half_view_margin"
        android:layout_marginRight="@dimen/half_view_margin"
    />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/importance_rating"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/survey_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/readiness_rating"
        android:textColor="@color/black"
        android:textSize="@dimen/secondary_text_size"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
    />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/readiness_rating"
        app:layout_constraintTop_toBottomOf="@id/importance_rating"
        app:layout_constraintStart_toEndOf="@id/survey_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/difficulty_rating"
        android:layout_marginStart="@dimen/half_view_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/secondary_text_size"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
    />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/difficulty_rating"
        app:layout_constraintTop_toBottomOf="@id/readiness_rating"
        app:layout_constraintStart_toEndOf="@id/survey_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/materials_rating"
        android:layout_marginStart="@dimen/half_view_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/secondary_text_size"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
    />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/materials_rating"
        app:layout_constraintTop_toBottomOf="@id/difficulty_rating"
        app:layout_constraintStart_toEndOf="@id/survey_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/survey_course"
        android:layout_marginStart="@dimen/half_view_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/secondary_text_size"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
    />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/survey_course"
        app:layout_constraintTop_toBottomOf="@id/materials_rating"
        app:layout_constraintStart_toEndOf="@id/survey_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/survey_date_time"
        android:layout_marginStart="@dimen/half_view_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/secondary_text_size"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
    />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/survey_date_time"
        app:layout_constraintTop_toBottomOf="@id/survey_course"
        app:layout_constraintStart_toEndOf="@id/survey_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/professor"
        android:layout_marginStart="@dimen/half_view_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/secondary_text_size"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
    />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/professor"
        app:layout_constraintTop_toBottomOf="@id/survey_date_time"
        app:layout_constraintStart_toEndOf="@id/survey_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/half_view_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/secondary_text_size"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
    />

</androidx.constraintlayout.widget.ConstraintLayout>